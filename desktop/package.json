{
  "name": "relaxdrive-desktop",
  "version": "1.2.0",
  "description": "RelaxDrive Desktop Control Center",
  "main": "electron/main.js",
  "private": true,
  "scripts": {
    "dev": "vite build && electron .",
    "dev:live": "vite",
    "start": "electron .",
    "build": "vite build && electron-builder",
    "build:win": "vite build && electron-builder --win",
    "build:mac": "vite build && electron-builder --mac"
  },
  "dependencies": {
    "i18next": "^23.7.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-i18next": "^14.0.0",
    "react-router-dom": "^6.21.0",
    "socket.io-client": "^4.6.0",
    "zustand": "^4.4.0"
  },
  "devDependencies": {
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@vitejs/plugin-react": "^4.2.0",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.0",
    "typescript": "^5.3.0",
    "vite": "^5.0.0"
  },
  "build": {
    "appId": "com.relaxdrive.control",
    "productName": "RelaxDrive Control Center",
    "directories": { "output": "dist-electron" },
    "files": ["electron/**", "dist/**"],
    "win": { "target": "nsis" },
    "mac": { "target": "dmg", "category": "public.app-category.business" }
  }
}
