generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id               String    @id @default(cuid())
  nickname         String    @unique
  email            String?   @unique
  phone            String?
  passwordHash     String    @map("password_hash")
  role             String
  tenantId         String?   @map("tenant_id")
  locale           String    @default("en")
  lat              Float?    @db.DoublePrecision
  lng              Float?    @db.DoublePrecision
  available        Boolean   @default(true)
  blocked          Boolean   @default(false)
  bannedUntil      DateTime? @map("banned_until")
  banReason        String?   @map("ban_reason")
  carPlateNumber   String?   @map("car_plate_number")
  carType          String?   @map("car_type")
  carCapacity      Int?      @map("car_capacity")
  carModelAndYear  String?   @map("car_model_and_year")
  driverId         String?   @unique @map("driver_id")
  approvedAt       DateTime? @map("approved_at")
  createdAt        DateTime  @default(now()) @map("created_at")
  updatedAt        DateTime  @updatedAt @map("updated_at")
  sessions         Session[]
  auditLogs        AuditLog[]
  ordersCreated    Order[]   @relation("OrderCreator")
}

model Session {
  id          String   @id @default(cuid())
  userId      String   @map("user_id")
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  device      String?
  ip          String?
  lastActiveAt DateTime @default(now()) @map("last_active_at")
  createdAt   DateTime @default(now()) @map("created_at")
}

model Order {
  id                       String    @id @default(cuid())
  status                   String    @default("DRAFT")
  tripType                 String    @default("ONE_WAY") @map("trip_type")
  routeType               String?   @map("route_type")   // LOCAL | LONG
  pickupAt                 DateTime  @map("pickup_at")
  pickupAddress            String    @map("pickup_address")
  middleAddress           String?   @map("middle_address")
  dropoffAddress           String    @map("dropoff_address")
  pickupType               String?   @map("pickup_type")
  dropoffType              String?   @map("dropoff_type")
  passengerId              String?   @map("passenger_id")
  driverId                 String?  @map("driver_id")
  createdById              String    @map("created_by_id")
  createdBy                User     @relation("OrderCreator", fields: [createdById], references: [id])
  bufferMinutes            Int       @default(15) @map("buffer_minutes")
  etaMinutes               Int?     @map("eta_minutes")
  aiEtaMinutes             Int?     @map("ai_eta_minutes")
  startedAt                DateTime? @map("started_at")
  arrivedAtPickupAt        DateTime? @map("arrived_at_pickup_at")
  leftPickupAt             DateTime? @map("left_pickup_at")
  waitChargeAtPickupCents  Int?      @map("wait_charge_at_pickup_cents")
  arrivedAtMiddleAt       DateTime? @map("arrived_at_middle_at")
  leftMiddleAt            DateTime? @map("left_middle_at")
  waitChargeAtMiddleCents Int?       @map("wait_charge_at_middle_cents")
  createdAt                DateTime  @default(now()) @map("created_at")
  updatedAt                DateTime  @updatedAt @map("updated_at")
}

model Passenger {
  id           String   @id @default(cuid())
  phone        String
  name         String?
  pickupAddr   String?  @map("pickup_addr")
  dropoffAddr  String?  @map("dropoff_addr")
  pickupType   String?  @map("pickup_type")
  dropoffType  String?  @map("dropoff_type")
  userId       String?  @unique @map("user_id")
  tenantId     String?  @map("tenant_id")
  createdAt    DateTime @default(now()) @map("created_at")
  updatedAt    DateTime @updatedAt @map("updated_at")
}

model AuditLog {
  id        String   @id @default(cuid())
  userId    String?  @map("user_id")
  user      User?    @relation(fields: [userId], references: [id])
  action    String
  resource  String
  payload   String?
  ip        String?
  createdAt DateTime @default(now()) @map("created_at")
}

model TranslationRecord {
  id         String   @id @default(cuid())
  sourceLang String   @map("source_lang")
  targetLang String   @map("target_lang")
  sourceText String   @map("source_text")
  targetText String   @map("target_text")
  userId     String?  @map("user_id")
  createdAt  DateTime @default(now()) @map("created_at")
}

model DriverReport {
  id          String   @id @default(cuid())
  lat         Float    @map("lat")
  lng         Float    @map("lng")
  type        String   @map("type")
  description String?  @map("description")
  userId      String   @map("user_id")
  createdAt   DateTime @default(now()) @map("created_at")
}

model WhiteLabelConfig {
  id           String   @id @default(cuid())
  tenantId     String   @unique @map("tenant_id")
  logoUrl      String?  @map("logo_url")
  primaryColor String?  @map("primary_color")
  domain       String?
  locales      String   @default("en,ru,ka")
  createdAt    DateTime @default(now()) @map("created_at")
  updatedAt    DateTime @updatedAt @map("updated_at")
}

model DriverTripSummary {
  id             String   @id @default(cuid())
  driverId       String   @map("driver_id")
  orderId        String   @map("order_id")
  pickupAddress  String   @map("pickup_address")
  dropoffAddress String   @map("dropoff_address")
  startedAt      DateTime @map("started_at")
  completedAt    DateTime @map("completed_at")
  distanceKm     Float    @map("distance_km")
  earningsCents  Int      @default(0) @map("earnings_cents")
  createdAt      DateTime @default(now()) @map("created_at")
}

model DriverStats {
  driverId          String   @id @map("driver_id")
  totalEarningsCents Int      @default(0) @map("total_earnings_cents")
  totalMiles         Float    @default(0) @map("total_miles")
  updatedAt         DateTime @updatedAt @map("updated_at")
}
