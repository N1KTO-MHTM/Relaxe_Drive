// Use this on Render: copy to schema.prisma before build, or set in Render build command.

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id               String    @id @default(cuid())
  nickname         String    @unique
  email            String?   @unique
  phone            String?
  passwordHash     String    @map("password_hash")
  role             String
  tenantId         String?   @map("tenant_id")
  locale           String    @default("en")
  lat              Float?    @db.DoublePrecision
  lng              Float?    @db.DoublePrecision
  online           Boolean   @default(false)
  available        Boolean   @default(true)
  blocked          Boolean   @default(false)
  bannedUntil      DateTime? @map("banned_until")
  banReason        String?   @map("ban_reason")
  carPlateNumber   String?   @map("car_plate_number")
  carPlateType     String?   @map("car_plate_type")   // TAXI | TLC | PRIVATE | OTHER
  carId            String?   @map("car_id")
  carType          String?   @map("car_type")
  carCapacity      Int?      @map("car_capacity")
  carModelAndYear  String?   @map("car_model_and_year")
  driverId         String?   @unique @map("driver_id")
  approvedAt       DateTime? @map("approved_at")
  createdAt        DateTime  @default(now()) @map("created_at")
  updatedAt        DateTime  @updatedAt @map("updated_at")
  sessions         Session[]
  auditLogs        AuditLog[]
  ordersCreated    Order[]   @relation("OrderCreator")
}

model Session {
  id          String   @id @default(cuid())
  userId      String   @map("user_id")
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  device      String?
  ip          String?
  lastActiveAt DateTime @default(now()) @map("last_active_at")
  createdAt   DateTime @default(now()) @map("created_at")
}

model Order {
  id                       String    @id @default(cuid())
  status                   String    @default("DRAFT")
  tripType                 String    @default("ONE_WAY") @map("trip_type")
  routeType               String?   @map("route_type")   // LOCAL | LONG
  pickupAt                 DateTime  @map("pickup_at")
  pickupAddress            String    @map("pickup_address")
  middleAddress           String?   @map("middle_address")
  waypoints               String?    @map("waypoints") // Stored as JSON string
  dropoffAddress           String?   @map("dropoff_address")
  pickupType               String?   @map("pickup_type")
  dropoffType              String?   @map("dropoff_type")
  dropoffImageUrl          String?   @map("dropoff_image_url")
  passengerId              String?   @map("passenger_id")
  passenger                Passenger? @relation(fields: [passengerId], references: [id])
  preferredCarType         String?   @map("preferred_car_type")
  driverId                 String?  @map("driver_id")
  createdById              String    @map("created_by_id")
  createdBy                User     @relation("OrderCreator", fields: [createdById], references: [id])
  bufferMinutes            Int       @default(15) @map("buffer_minutes")
  etaMinutes               Int?     @map("eta_minutes")
  aiEtaMinutes             Int?     @map("ai_eta_minutes")
  startedAt                DateTime? @map("started_at")
  arrivedAtPickupAt        DateTime? @map("arrived_at_pickup_at")
  leftPickupAt             DateTime? @map("left_pickup_at")
  waitChargeAtPickupCents  Int?      @map("wait_charge_at_pickup_cents")
  arrivedAtMiddleAt       DateTime? @map("arrived_at_middle_at")
  leftMiddleAt            DateTime? @map("left_middle_at")
  waitChargeAtMiddleCents Int?       @map("wait_charge_at_middle_cents")
  manualWaitMinutes       Int?       @map("manual_wait_minutes")
  waitNotes               String?    @map("wait_notes")
  completedAt             DateTime? @map("completed_at")
  riskLevel               String?   @map("risk_level")
  suggestedDriverId       String?   @map("suggested_driver_id")
  manualAssignment        Boolean   @default(false) @map("manual_assignment")
  createdAt                DateTime  @default(now()) @map("created_at")
  updatedAt                DateTime  @updatedAt @map("updated_at")
  orderEvents             OrderEvent[]
}

model Passenger {
  id           String   @id @default(cuid())
  phone        String
  name         String?
  pickupAddr   String?  @map("pickup_addr")
  dropoffAddr  String?  @map("dropoff_addr")
  pickupType   String?  @map("pickup_type")
  dropoffType  String?  @map("dropoff_type")
  userId       String?  @unique @map("user_id")
  tenantId     String?  @map("tenant_id")
  createdAt    DateTime @default(now()) @map("created_at")
  updatedAt    DateTime @updatedAt @map("updated_at")
  savedAddresses SavedAddress[]
  orders      Order[]
}

model AuditLog {
  id        String   @id @default(cuid())
  userId    String?  @map("user_id")
  user      User?    @relation(fields: [userId], references: [id])
  action    String
  resource  String
  payload   String?
  ip        String?
  createdAt DateTime @default(now()) @map("created_at")
}

model TranslationRecord {
  id         String   @id @default(cuid())
  sourceLang String   @map("source_lang")
  targetLang String   @map("target_lang")
  sourceText String   @map("source_text")
  targetText String   @map("target_text")
  userId     String?  @map("user_id")
  createdAt  DateTime @default(now()) @map("created_at")
}

model DriverReport {
  id          String   @id @default(cuid())
  lat         Float    @map("lat")
  lng         Float    @map("lng")
  type        String   @map("type")
  description String?  @map("description")
  userId      String   @map("user_id")
  createdAt   DateTime @default(now()) @map("created_at")
}

model WhiteLabelConfig {
  id           String   @id @default(cuid())
  tenantId     String   @unique @map("tenant_id")
  logoUrl      String?  @map("logo_url")
  primaryColor String?  @map("primary_color")
  domain       String?
  locales      String   @default("en,ru,ka")
  createdAt    DateTime @default(now()) @map("created_at")
  updatedAt    DateTime @updatedAt @map("updated_at")
}

model DriverTripSummary {
  id             String   @id @default(cuid())
  driverId       String   @map("driver_id")
  orderId        String   @map("order_id")
  pickupAddress  String   @map("pickup_address")
  dropoffAddress String   @map("dropoff_address")
  startedAt      DateTime @map("started_at")
  completedAt    DateTime @map("completed_at")
  distanceKm     Float    @map("distance_km")
  earningsCents  Int      @default(0) @map("earnings_cents")
  createdAt      DateTime @default(now()) @map("created_at")
}

model DriverStats {
  driverId          String   @id @map("driver_id")
  totalEarningsCents Int      @default(0) @map("total_earnings_cents")
  totalMiles         Float    @default(0) @map("total_miles")
  idleAvg           Float?   @map("idle_avg")
  lateRate          Float?   @map("late_rate")
  rejectRate        Float?   @map("reject_rate")
  updatedAt         DateTime @updatedAt @map("updated_at")
}

model OrderEvent {
  id         String   @id @default(cuid())
  orderId    String   @map("order_id")
  order      Order    @relation(fields: [orderId], references: [id], onDelete: Cascade)
  type       String   @map("type")
  source     String   @map("source")
  confidence Float?   @map("confidence")
  createdAt  DateTime @default(now()) @map("created_at")
}

model SavedAddress {
  id          String   @id @default(cuid())
  passengerId String?  @map("passenger_id")
  passenger   Passenger? @relation(fields: [passengerId], references: [id])
  phone       String?  // Phone number associated with this address
  address     String
  category    String?
  type        String?  // pickup, dropoff, both
  useCount    Int      @default(1) @map("use_count")
  lastUsedAt  DateTime @default(now()) @map("last_used_at")
  createdAt   DateTime @default(now()) @map("created_at")

  @@index([passengerId])
  @@map("saved_addresses")
}

model Zone {
  id          String   @id @default(cuid())
  name        String
  description String?
  color       String   @default("#3b82f6")
  points      String   // Stored as JSON string
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")

  @@map("zones")
}

model PhoneBase {
  id          String   @id @default(cuid())
  originalPhone String @unique @map("original_phone")
  targetPhone   String @map("target_phone")
  description   String?
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")

  @@map("phone_base")
}

model Chat {
  id            String        @id @default(cuid())
  driverId      String        @unique @map("driver_id")
  status        String        @default("OPEN") // OPEN, WAITING, CLOSED
  lastMessageAt DateTime      @default(now()) @map("last_message_at")
  lastMessage   String?       @map("last_message")
  unreadCount   Int           @default(0) @map("unread_count")
  createdAt     DateTime      @default(now()) @map("created_at")
  updatedAt     DateTime      @updatedAt @map("updated_at")
  
  messages      ChatMessage[]

  @@index([status])
  @@index([lastMessageAt])
  @@map("chats")
}

model ChatMessage {
  id         String   @id @default(cuid())
  chatId     String   @map("chat_id")
  senderId   String   @map("sender_id")
  senderRole String   @map("sender_role") // DRIVER or DISPATCHER
  message    String
  fileUrl    String?  @map("file_url")
  fileType   String?  @map("file_type")
  read       Boolean  @default(false)
  createdAt  DateTime @default(now()) @map("created_at")
  
  chat       Chat     @relation(fields: [chatId], references: [id], onDelete: Cascade)

  @@index([chatId])
  @@index([senderId])
  @@index([createdAt])
  @@map("chat_messages")
}
